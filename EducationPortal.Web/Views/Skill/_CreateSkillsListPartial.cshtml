@model List<SkillCreateViewModel>

<div>
    @for (int idx = 0; idx < Model.Count; idx++)
    {
        <div class="flex items-center gap-2 mb-4">
            <label class="floating-label flex-1">
                <span>@Html.DisplayNameFor(m => m[idx].Name)</span>
                <input asp-for="@Model[idx].Name" id="Skills[@idx].Name" name="Skills[@idx].Name"
                    placeholder=@Html.DisplayNameFor(m => m[idx].Name) class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].Name" data-valmsg-for="Skills[@idx].Name"
                    class="text-error text-sm ml-1"></span>
            </label>
            <button type="button" class="btn btn-error btn-sm w-20" onclick="removeSkillFromViewModel(@idx)">Delete</button>
        </div>
    }
</div>
