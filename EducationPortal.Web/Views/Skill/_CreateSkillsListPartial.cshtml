@model List<SkillCreateViewModel>

<div>
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="flex items-center gap-2 mb-4">
            <label class="floating-label flex-1">
                <span>Name</span>
                <input asp-for="@Model[i].Name" name="Skills[@i].Name" class="input input-md w-full" />
                <span asp-validation-for="@Model[i].Name" class="text-error text-sm ml-1"></span>
            </label>
            <button type="button" class="btn btn-error btn-sm" onclick="removeSkillFromViewModel(@i)">Delete</button>
        </div>
    }
</div>
