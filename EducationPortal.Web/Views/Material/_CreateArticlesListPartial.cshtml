@model List<ArticleCreateViewModel>

<div>
    @for (int idx = 0; idx < Model.Count; idx++)
    {
        <div class="flex items-center gap-2 mb-4">
            <label class="floating-label flex-1">
                <span>Title</span>
                <input asp-for="@Model[idx].Title" name="Articles[@idx].Title" class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].Title" class="text-error text-sm ml-1"></span>
            </label>
            <label class="floating-label flex-1">
                <span>PublicationDate</span>
                <input type="date" asp-for="@Model[idx].PublicationDate" name="Articles[@idx].PublicationDate"
                    class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].PublicationDate" class="text-error text-sm ml-1"></span>
            </label>
            <label class="floating-label flex-1">
                <span>ResourceLink</span>
                <input asp-for="@Model[idx].ResourceLink" name="Articles[@idx].ResourceLink"
                    class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].ResourceLink" class="text-error text-sm ml-1"></span>
            </label>
            <button type="button" class="btn btn-error btn-sm" onclick="removeArticleFromViewModel(@idx)">Delete</button>
        </div>
    }
</div>
