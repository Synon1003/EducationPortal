@model PublicationViewModel

<div class="flex items-center justify-start ml-2 mb-4">
    <div class="text-2xl mt-4 mb-4 font-medium">@Model.Title</div>
</div>

<table class="table table-fixed w-full">
    <tbody>
        <tr>
            <td>@Html.DisplayNameFor(p => p.Title)</td>
            <td class="text-right">@Html.DisplayFor(p => p.Title)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(p => p.Authors)</td>
            <td class="text-right">@Html.DisplayFor(p => p.Authors)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(p => p.Pages)</td>
            <td class="text-right">@Html.DisplayFor(p => p.Pages)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(p => p.Format)</td>
            <td class="text-right">@Html.DisplayFor(p => p.Format)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(p => p.PublicationYear)</td>
            <td class="text-right">@Html.DisplayFor(p => p.PublicationYear)</td>
        </tr>
    </tbody>
</table>
