@model List<VideoCreateViewModel>

<div>
    @for (int idx = 0; idx < Model.Count; idx++)
    {
        <div class="flex items-center gap-2 mb-4">
            <label class="floating-label flex-1">
                <span>Title</span>
                <input asp-for="@Model[idx].Title" name="Videos[@idx].Title" class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].Title" class="text-error text-sm ml-1"></span>
            </label>
            <label class="floating-label flex-1">
                <span>Duration</span>
                <input asp-for="@Model[idx].Duration" name="Videos[@idx].Duration" class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].Duration" class="text-error text-sm ml-1"></span>
            </label>
            <label class="floating-label flex-1">
                <span>Quality</span>
                <input asp-for="@Model[idx].Quality" name="Videos[@idx].Quality" class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].Quality" class="text-error text-sm ml-1"></span>
            </label>
            <button type="button" class="btn btn-error btn-sm" onclick="removeVideoFromViewModel(@idx)">Delete</button>
        </div>
    }
</div>
