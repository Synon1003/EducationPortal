@model List<PublicationCreateViewModel>

<div>
    @for (int idx = 0; idx < Model.Count; idx++)
    {
        <div>
            <label class="floating-label mb-4">
                <span>Title</span>
                <input asp-for="@Model[idx].Title" id="Publications[@idx].Title" name="Publications[@idx].Title"
                    class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].Title" data-valmsg-for="Publications[@idx].Title"
                    class="text-error text-sm ml-1"></span>
            </label>
        </div>
        <div>
            <label class="floating-label mb-4">
                <span>Authors</span>
                <input asp-for="@Model[idx].Authors" id="Publications[@idx].Authors" name="Publications[@idx].Authors"
                    class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].Authors" data-valmsg-for="Publications[@idx].Authors"
                    class="text-error text-sm ml-1"></span>
            </label>
        </div>
        <div class="flex items-center gap-2 mb-4">
            <label class="floating-label flex-1">
                <span>Pages</span>
                <input asp-for="@Model[idx].Pages" id="Publications[@idx].Pages" name="Publications[@idx].Pages"
                    class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].Pages" data-valmsg-for="Publications[@idx].Pages"
                    class="text-error text-sm ml-1"></span>
            </label>
            <label class="floating-label flex-1">
                <span>Format</span>
                <input asp-for="@Model[idx].Format" id="Publications[@idx].Format" name="Publications[@idx].Format"
                    class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].Format" data-valmsg-for="Publications[@idx].Format"
                    class="text-error text-sm ml-1"></span>
            </label>
            <label class="floating-label flex-1">
                <span>PublicationYear</span>
                <input asp-for="@Model[idx].PublicationYear" id="Publications[@idx].PublicationYear"
                    name="Publications[@idx].PublicationYear" class="input input-md w-full" />
                <span asp-validation-for="@Model[idx].PublicationYear" data-valmsg-for="Publications[@idx].PublicationYear"
                    class="text-error text-sm ml-1"></span>
            </label>

        </div>
        <div class="flex justify-center mb-4">
            <button type="button" class="btn btn-error btn-sm w-20"
                onclick="removePublicationFromViewModel(@idx)">Delete</button>
        </div>
    }
</div>
