@model List<MaterialCreateViewModel>

<div>
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="flex items-center gap-2 mb-4">
            <label class="floating-label flex-1">
                <span>Title</span>
                <input asp-for="@Model[i].Title" name="Materials[@i].Title" class="input input-md w-1/2" />
                <span asp-validation-for="@Model[i].Title" class="text-error text-sm ml-1"></span>
            </label>
            <label class="floating-label flex-1">
                <span>Type</span>
                <input asp-for="@Model[i].Type" name="Materials[@i].Type" class="input input-md w-1/2" />
                <span asp-validation-for="@Model[i].Type" class="text-error text-sm ml-1"></span>
            </label>
            <button type="button" class="btn btn-error btn-sm" onclick="removeMaterialFromViewModel(@i)">Delete</button>
        </div>
    }
</div>
