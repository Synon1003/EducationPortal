@model HomeViewModel
@{
    ViewData["Title"] = @Html.Translate("Home");
    ViewBag.CurrentUrl = "~/Home/Index";
}

<div>
    <div class="font-normal text-3xl text-center ml-2 mb-4" data-aos="fade-right" data-aos-duration="1000">
        @Html.Translate(Model.Header)
    </div>
    <div class="font-bold text-2xl text-center ml-2 mb-4" data-aos="fade-right" data-aos-duration="1000"
        data-aos-delay="300">@Html.Translate(Model.SubHeader)</div>
    <div class="flex justify-center mb-4" data-aos="fade-right" data-aos-duration="1000" data-aos-delay="600">
        <div class="w-96 text-center text-sm mb-8">
            @Html.Translate(Model.WelcomeText)
        </div>
    </div>
</div>

<div class="flex items-center justify-center min-h-[calc(100vh-20.0rem)]">
    <div class="flex flex-col-reverse lg:flex-row lg:w-full">

        <div class="flex flex-col justify-center lg:w-1/3 mt-8 lg:mr-8">
            <h3 class="font-bold text-lg text-center mb-2" data-aos="fade-up" data-aos-delay="500"
                data-aos-duration="1000" data-aos-easing="ease-in-sine">@Html.Translate(Model.AdviceHeader)</h3>
            <div class="text-center text-sm mb-4" data-aos="fade-up" data-aos-delay="1000" data-aos-duration="1000"
                data-aos-easing="ease-in-sine">
                @Html.Translate(Model.AdviceText)</div>
            @if (!User?.Identity?.IsAuthenticated ?? true)
            {
                <div class="flex justify-center mb-4">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-md btn-primary w-24" data-aos="fade-up"
                        data-aos-delay="1500" data-aos-duration="1000" data-aos-easing="ease-in-sine">
                        @Html.Translate("SignUp")
                    </a>
                </div>
            }
        </div>
        <div class="block lg:flex items-center justify-center lg:w-2/3">
            <div class="card card-border" data-aos="flip-left" data-aos-delay="1000" data-aos-duration="1000">
                <div class="card-body">
                    <div class="overflow-x-auto">
                        <table class="table w-full">
                            <thead>
                                <tr data-aos="fade-left" data-aos-delay="1500" data-aos-duration="1000">
                                    <th>@Html.Translate("Name")</th>
                                    <th>@Html.Translate("Description")</th>
                                    <th>@Html.Translate("Skills")</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr data-aos="fade-left" data-aos-delay="2000" data-aos-duration="1000">
                                    <td class="font-bold">@Html.Translate("ExampleGitCourseName")</td>
                                    <td>@Html.Translate("ExampleGitCourseDescription")</td>
                                    <td class="font-semibold">@Html.Translate("ExampleGitCourseSkills")</td>
                                </tr>
                                <tr data-aos="fade-left" data-aos-delay="2250" data-aos-duration="1000">
                                    <td class="font-bold">@Html.Translate("ExampleDotnetCourseName")</td>
                                    <td>@Html.Translate("ExampleDotnetCourseDescription")</td>
                                    <td class="font-semibold">@Html.Translate("ExampleDotnetCourseSkills")</td>
                                </tr>
                                <tr data-aos="fade-left" data-aos-delay="2500" data-aos-duration="1000">
                                    <td class="font-bold"><span class="text-warning cursor-pointer"
                                            onclick="setUserTheme('cyberpunk')"><img src="~/svg/sparkles.svg" alt="✨"
                                                class="inline w-4 h-4" />@Html.Translate("ExampleAnswersCourseName")<img
                                                src="~/svg/sparkles.svg" alt="✨" class="inline w-4 h-4" /></span>
                                    </td>
                                    <td>@Html.Translate("ExampleAnswersCourseDescription")</td>
                                    <td class="font-semibold">@Html.Translate("ExampleAnswersCourseSkills")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</tr>

@section ValidationScripts {
        <partial name="_ValidationScriptsPartial" />
}
