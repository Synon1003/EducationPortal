@model CourseDetailViewModel
@{
    ViewData["Title"] = @Html.Translate("CourseDetails");
    ViewBag.CurrentUrl = "~/Course/Details";
}

<div class="flex items-center justify-center min-h-[calc(100vh-98px)]">
    <div class="medium-card card-border" data-aos="zoom-in">
        <div class="card-body">
            <div class="flex items-center justify-between mx-2 mb-4">
                <h3 class="font-medium text-3xl ml-2">@Html.DisplayFor(c => c.Name)</h3>
                @if (Model.UserCourse is not null)
                {
                    <div class="radial-progress @(Model.UserCourse.IsCompleted ? "text-success" : "text-info")"
                        style="--value:(@Model.UserCourse.ProgressPercentage); --size:3rem;"
                        aria-valuenow="@Model.UserCourse.ProgressPercentage" role="progressbar">
                        @Model.UserCourse.ProgressPercentage%</div>
                }
                else
                {
                    <a asp-controller="User" asp-action="EnrollOnCourse" asp-route-id="@Model.Id"
                        class="btn btn-primary btn-md w-24">@Html.Translate("Enroll")</a>
                }
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(c => c.Name)</td>
                        <td class="text-right">@Html.DisplayFor(c => c.Name)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(c => c.Description)</td>
                        <td class="text-right">@Html.DisplayFor(c => c.Description)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(c => c.CreatedBy)</td>
                        <td class="text-right">@Html.DisplayFor(c => c.CreatedBy)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(c => c.Skills)</td>
                        <td class="text-right">@(String.Join(", ", Model.Skills))</td>
                    </tr>
                </tbody>
            </table>
            <div class="flex items-start justify-between mt-2 mx-2 gap-2">
                <div class="flex flex-col-reverse xs:flex-row items-start justify-start gap-2">
                    <a asp-controller="Course" asp-action="List" class="btn btn-md btn-secondary w-20">
                        @Html.Translate("Back")
                    </a>
                    @if (Model.UserCourse is not null && Model.UserCourse.ProgressPercentage != 100)
                    {
                        <a asp-controller="User" asp-action="LeaveCourse" asp-route-id="@Model.Id"
                            class="btn btn-error btn-md w-24">@Html.Translate("Leave")</a>
                    }
                </div>
                @if (Model.UserCourse is not null)
                {
                    <a asp-controller="Course" asp-action="Materials" asp-route-id="@Model.Id"
                        class="btn btn-md btn-info w-24">
                        @Html.Translate("Materials")
                    </a>
                }
            </div>
        </div>
    </div>
</div>